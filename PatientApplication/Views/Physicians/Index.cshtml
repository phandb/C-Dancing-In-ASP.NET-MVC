@model IEnumerable<PatientApplication.Models.Physician>
@{
    ViewBag.Title = "Physician";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Physician List</h2>

<p>
    @Html.ActionLink("Add New Physician", "NewPhysician", "Physicians", htmlAttributes: new { @class = "btn btn-outline-primary" })

</p>

@if (!Model.Any())
{
    <p>We don't have any physician yet!</p>
}
else
{
    <table class="table table-bordered table-dark mt-5">
        <thead>

            <tr>
                <th>#</th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.PhysicianName)
                </th>

                <th class="text-center">Action</th>
            </tr>
        </thead>

        <tbody>
            @{ int counter = 1; }
            @foreach (var item in Model)
            {

                <tr>
                    <td>@counter</td>
                    <td class="text-center">
                       @Html.DisplayFor(modelItem=>item.PhysicianName)
                    </td>

                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { physicianId = item.Id }, htmlAttributes: new { @class = "btn btn-outline-info" })
                        @Html.ActionLink("Details", "Details", new { physicianId = item.Id }, htmlAttributes: new { @class = "btn btn-outline-success" })
                        @Html.ActionLink("Delete", "Delete", "Physicians",  new { physicianId = item.Id }, htmlAttributes: new { @class = "btn btn-outline-danger" })
                    </td>

                </tr>
                counter++;
            }
        </tbody>


    </table>

}
