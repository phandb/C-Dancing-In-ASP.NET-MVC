@model PatientApplication.ViewModels.PharmacyFormViewModel
@{
    ViewBag.Title = "New Pharmacy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> New Pharmacy</h2>

@using (Html.BeginForm("Save", "Pharmacies"))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Pharmacy.PharmacyName, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(model => model.Pharmacy.PharmacyName, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Pharmacy.PharmacyAddress, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(model => model.Pharmacy.PharmacyAddress, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Pharmacy.PharmacyPhone, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(model => model.Pharmacy.PharmacyPhone, htmlAttributes: new { @class = "form-control" })
    </div>

    @Html.HiddenFor(model => model.Pharmacy.Id)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>

</div>
}