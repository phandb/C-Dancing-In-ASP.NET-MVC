@model PatientApplication.ViewModels.PatientFormViewModel

@{
    ViewBag.Title = "NewPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Patient</h2>

@using (Html.BeginForm("Save", "Patients")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Patient</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Patient.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model=>model.Patient.Name, htmlAttributes: new { @class="form-control"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Patient.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Patient.Gender, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Patient.Birthdate, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Patient.Birthdate, "{0:d MMM yyyy}",  htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Patient.Address, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Patient.Address, htmlAttributes: new { @class = "form-control" })
        </div>
        @Html.HiddenFor(model=>model.Patient.Id)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
